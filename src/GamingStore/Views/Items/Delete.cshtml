@model GamingStore.ViewModels.Items.ItemViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Item# @Model.Item.Id</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Item.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Manufacturer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Item.Manufacturer)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Item.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Item.Category)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Item.PropertiesList)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Item.PropertiesList)
        </dd>
    </dl>
    
    @using (Html.BeginForm("Delete", "Items", FormMethod.Post, null))
    {
        @Html.Hidden("id", Model.Item.Id)
        <input type="submit" value="Delete" class="btn btn-danger" />
    }
</div>
